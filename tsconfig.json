{
  "compilerOptions": {
    "allowJs": true,
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "noImplicitAny": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "lib": ["esnext"],
    "target": "es2016",
    "typeRoots": [
      "./node_modules/@types/",
      "./index.d.ts"
    ],
    "rootDir": "."
  },
  "exclude": ["node_modules/**", "**/*.test.ts*"],
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "useCache": true
  }
}
